# ===========================================
# Syntiant Atlas - Environment Configuration
# ===========================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/syntiant_atlas

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_LONG_RANDOM_STRING
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=CHANGE_ME_DIFFERENT_FROM_JWT_SECRET
JWT_REFRESH_EXPIRY=30d

# Admin Seed (used by prisma/seed.ts)
ADMIN_EMAIL=admin@syntiantatlas.com
ADMIN_PASSWORD=Admin@123456

# Application
API_PORT=8080
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Google OAuth (Phase 2)
GOOGLE_CLIENT_ID=PLACEHOLDER
GOOGLE_CLIENT_SECRET=PLACEHOLDER

# Stripe Payment Gateway (Phase 6)
STRIPE_SECRET_KEY=PLACEHOLDER
STRIPE_WEBHOOK_SECRET=PLACEHOLDER

# SendGrid Email (Phase 6)
SENDGRID_API_KEY=PLACEHOLDER
SENDGRID_FROM_EMAIL=noreply@syntiantatlas.com

# Twilio SMS (Phase 6)
TWILIO_ACCOUNT_SID=PLACEHOLDER
TWILIO_AUTH_TOKEN=PLACEHOLDER
TWILIO_PHONE_NUMBER=PLACEHOLDER

# AWS S3 Storage (Phase 6)
AWS_ACCESS_KEY_ID=PLACEHOLDER
AWS_SECRET_ACCESS_KEY=PLACEHOLDER
AWS_S3_BUCKET=PLACEHOLDER
AWS_REGION=PLACEHOLDER

# Blockchain (Phase 5)
POLYGON_RPC_URL=PLACEHOLDER
DEPLOYER_PRIVATE_KEY=PLACEHOLDER
